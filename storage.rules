rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public access for Web Help Center feedback images
    match /feedback_images/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Public access for Flutter app feedback uploads (using user subfolder)
    match /feedback_uploads/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Default: Require authentication for all other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
