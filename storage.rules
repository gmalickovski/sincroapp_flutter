rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que usuários autenticados façam upload apenas em seus próprios diretórios
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Permite leitura pública
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para uploads de Feedback (Adicionado)
    match /feedback_uploads/{userId}/{allPaths=**} {
      allow read: if true; // Permite leitura pública (para o n8n acessar)
      allow write: if request.auth != null && (request.auth.uid == userId || userId == 'anonymous');
    }
  }
}
